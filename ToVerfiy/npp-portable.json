{
    "version": "8.0",
    "description": "A free source code editor and Notepad replacement that supports several languages.",
    "homepage": "https://notepad-plus-plus.org",
    "license": "GPL-2.0-only",
    "notes": "The following page explains how to add explorer context menu entries for notepad++. https://npp-user-manual.org/docs/shell-extension",
    "architecture": {
        "64bit": {
            "url": "https://github.com/notepad-plus-plus/notepad-plus-plus/releases/download/v8/npp.8.0.portable.x64.zip",
            "hash": "8af45caeb90880a347eedbffa2b082ce57085e05facb2e82697a5335b525de54"
        },
        "32bit": {
            "url": "https://github.com/notepad-plus-plus/notepad-plus-plus/releases/download/v8/npp.8.0.portable.zip",
            "hash": "8a80a5017063c5388a7077152c0f26f9db26f3f130f6810b688fa73b9e7622d9"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\config.xml\")) { New-Item \"$dir\\config.xml\" -Force | Out-Null }",
        "if (!(Test-Path \"$persist_dir\\session.xml\")) { New-Item \"$dir\\session.xml\" -Force | Out-Null }",
        "if (!(Test-Path \"$persist_dir\\shortcuts.xml\")) { New-Item \"$dir\\shortcuts.xml\" -Force | Out-Null }",
        "if (!(Test-Path \"$persist_dir\\userDefineLang.xml\")) { New-Item \"$dir\\userDefineLang.xml\" -Force | Out-Null }"
    ],
    "bin": "notepad++.exe",
    "shortcuts": [
        [
            "notepad++.exe",
            "Notepad++"
        ]
    ],
    "persist": [
        "backup",
        "cloud",
        "plugins",
        "themes",
        "userDefineLangs",
        "config.xml",
        "session.xml",
        "shortcuts.xml",
        "userDefineLang.xml"
    ],
    "checkver": {
        "github": "https://github.com/notepad-plus-plus/notepad-plus-plus",
        "regex": "Notepad\\+\\+ release ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/notepad-plus-plus/notepad-plus-plus/releases/download/v$majorVersion/npp.$version.portable.x64.zip"
            },
            "32bit": {
                "url": "https://github.com/notepad-plus-plus/notepad-plus-plus/releases/download/v$majorVersion/npp.$version.portable.zip"
            }
        },
        "hash": {
            "url": "$baseurl/npp.$version.checksums.sha256"
        }
    }
}
