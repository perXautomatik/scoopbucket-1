    "hash": "14c48a23da38ecc16885d1b5326ac7d7fe11ba8d24f7ffb6a4189aa4e877a8ef",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\WaterfoxPortable.ini\")) {",
        "    @(",
        "        '[WaterfoxPortable]'",
        "        'DisableSplashScreen=true'",
        "    ) | Add-Content -Path \"$dir\\WaterfoxPortable.ini\" -Encoding ASCII -Force",
        "}",
        "Remove-Item \"$dir\\`$PLUGINSDIR\" -Recurse"
    ],
    "bin": "WaterfoxPortable.exe",
    "shortcuts": [
        [
            "WaterfoxPortable.exe",
            "Waterfox"
        ]
    ],
    "persist": [
        "Data",
        "WaterfoxPortable.ini"
    ],
    "checkver": {
        "url": "https://www.waterfox.net/releases/",
        "regex": "WaterfoxPortable_([\\d.]+)_English.paf.exe"
    },
    "autoupdate": {
        "url": "https://cdn.waterfox.net/releases/win64/portable/WaterfoxPortable_$version_English.paf.exe#/dl.7z"
    }
}
