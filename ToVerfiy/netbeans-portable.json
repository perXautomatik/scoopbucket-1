{
    "version": "11.0",
    "homepage": "https://netbeans.org",
    "description": "Quickly and easily develop desktop, mobile, and web applications with Java, JavaScript, HTML5, PHP, C/C++ and more.",
    "license": "Apache-2.0",
    "url": "https://www.apache.org/dist/netbeans/netbeans/11.3/netbeans-11.3-bin.zip",
    "hash": "sha512:ae828836138b5a4156d58df24dd4053be58018cb6b5beb179cb0f4cd8b5db72d2a7356a434d01157aacb78d228732950cf4e3a0b6c725da8e053b6ccd91075d6",
    "extract_dir": "netbeans",
    "installer": {
        "script": [
            "$conf = Get-Content \"$dir\\etc\\netbeans.conf\"",
            "$jdk = Get-Item 'D:\\apps\\scoop\\apps\\ojdkbuild-full\\current*'",
            "Set-Content \"$dir\\etc\\netbeans.conf\" (",
            "  $conf -replace '#netbeans_jdkhome=.*',\"netbeans_jdkhome=`\"$jdk`\"\")",
            "if (-not $?) { exit 1 }",
            "if (!(Test-Path \"$dir\\bin\\NetBeansPortable.exe\")) {",
            "    Copy-Item \"D:\\Cloud\\Dropbox\\Apps\\_Portables\\NetBeans\\NetBeansPortable.exe\" \"$dir\\bin\" -Force",
            "}"
        ]
    },
    "shortcuts": [
        [
            "bin/NetBeansPortable.exe",
            "NetBeans"
        ]
    ],
    "checkver": {
        "url": "https://netbeans.apache.org/download/index.html",
        "regex": "\\(NB ([\\d.]+)\\)</h2>"
    },
    "autoupdate": {
        "url": "https://www.apache.org/dist/netbeans/netbeans/$version/netbeans-$version-bin.zip",
        "hash": {
            "url": "$url.sha512"
        }
    }
}

