{
    "description": "Nightly builds of Firefox: the popular open source web browser.",
    "homepage": "https://www.mozilla.org/en-US/firefox/nightly/",
    "version": "83.0a1",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-83.0a1.en-US.win64.zip",
            "hash": "c9070ba6c0e0f3d1736fec7c93ce54129355ce048c2f8156dd1adec712450785"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-83.0a1.en-US.win32.zip",
            "hash": "2bf40cf8345544a018e823d7e17026ac8387ef61f7618d611a168cb634ac8f29"
        }
    },
    "extract_dir": "firefox",
    "bin": [
        [
            "firefox.exe",
            "firefox-nightly",
            "-Profile \"$dir\\Profile\""
        ]
    ],
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox Nightly",
            "-Profile Profile"
        ]
    ],
    "persist": "Profile",
    "checkver": {
        "url": "https://www.mozilla.org/de/firefox/all/",
        "regex": "<option value=\"desktop_nightly\">([\\da.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-$version.en-US.win64.zip"
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-$version.en-US.win32.zip"
            }
        }
    }
}
