{
    "description": "Nightly builds of Firefox: the popular open source web browser.",
    "homepage": "https://www.mozilla.org/en-US/firefox/nightly/",
    "version": "84.0a1",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-84.0a1.en-US.win64.zip",
            "hash": "bc5b87e86f9bda60dec0ba41146e2dcffb7e01d9f0e6ba2ecaaa9e3dd74e234f"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-84.0a1.en-US.win32.zip",
            "hash": "4f43e9fb5c449f00dea5ebc4fc70cf93eccc7b5a471a9cd61f70688e2edfe357"
        }
    },
    "extract_dir": "firefox",
    "bin": [
        [
            "firefox.exe",
            "firefox-nightly",
            "-Profile \"$dir\\Profile\""
        ]
    ],
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox Nightly",
            "-Profile Profile"
        ]
    ],
    "persist": "Profile",
    "checkver": {
        "url": "https://www.mozilla.org/de/firefox/all/",
        "regex": "<option value=\"desktop_nightly\">([\\da.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-$version.en-US.win64.zip"
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-$version.en-US.win32.zip"
            }
        }
    }
}
