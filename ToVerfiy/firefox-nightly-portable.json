{
    "description": "Nightly builds of Firefox: the popular open source web browser.",
    "homepage": "https://www.mozilla.org/en-US/firefox/nightly/",
    "version": "82.0a1",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-82.0a1.en-US.win64.zip",
            "hash": "9da1baec9ade09258a9229fa3d4c5e0e9529fb630bcf0f878e3396df88647517"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-82.0a1.en-US.win32.zip",
            "hash": "e0810bd7d43dd03e590711c2649210e08223801d2e7281af61a7ecf12ed841cc"
        }
    },
    "extract_dir": "core",
    "bin": [
        [
            "firefox.exe",
            "firefox-nightly",
            "-Profile \"$dir\\Profile\""
        ]
    ],
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox Nightly",
            "-Profile Profile"
        ]
    ],
    "persist": "Profile",
    "checkver": {
        "url": "https://www.mozilla.org/de/firefox/all/",
        "regex": "<option value=\"desktop_nightly\">([\\da.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-$version.en-US.win64.zip"
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/nightly/latest-mozilla-central/firefox-$version.en-US.win32.zip"
            }
        }
    }
}
