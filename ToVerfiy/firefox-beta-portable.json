{
    "description": "Beta builds of Firefox: the popular open source web browser.",
    "homepage": "https://www.mozilla.org/en-US/firefox/beta/",
    "version": "82.0b3",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/82.0b3/win64/en-US/Firefox%20Setup%2082.0b3.exe#/dl.7z",
            "hash": "sha512:7a96969e8c60435f05f93d5bc2c4391e77f0ba0bbffd33874db06703e6f75258c91477a1110bfbc79c86c41b3c0254a63a148c691a2da0b26f773f3971cae24b"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/82.0b3/win32/en-US/Firefox%20Setup%2082.0b3.exe#/dl.7z",
            "hash": "sha512:c5852bf5c06572342e2850e1c3546af7696d7b1e0f08506de8be181c2a04d1f6e942a91dca9f27e2e568911f913466610a6236a25b445ce7d584ce986bd63d89"
        }
    },
    "extract_dir": "core",
    "bin": [
        [
            "firefox.exe",
            "firefox-beta",
            "-Profile \"$dir\\Profile\""
        ]
    ],
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox Beta",
            "-Profile Profile"
        ]
    ],
    "checkver": {
        "url": "https://www.mozilla.org/de/firefox/all/",
        "regex": "<option value=\"desktop_beta\">([\\db.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            }
        }
    }
}
