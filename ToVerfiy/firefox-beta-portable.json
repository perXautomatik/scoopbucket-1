{
    "description": "Beta builds of Firefox: the popular open source web browser.",
    "homepage": "https://www.mozilla.org/en-US/firefox/beta/",
    "version": "84.0b1",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/84.0b1/win64/en-US/Firefox%20Setup%2084.0b1.exe#/dl.7z",
            "hash": "sha512:2dc9856479d01eafdc14600498b0ff8ffcba98a6594621312d263499050c897c09ad53807c9faaad6fb458af1c9c3cbe85113059da8fb0c10eb309d62d046c62"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/84.0b1/win32/en-US/Firefox%20Setup%2084.0b1.exe#/dl.7z",
            "hash": "sha512:361a77c7a9b090c3d3d5e85bb7361eb8910c25c1154a1e068b1deab47770241a1cde92a97165597e35035ed4697fa87fabce6a95cdd294d998f58c6afde9095a"
        }
    },
    "extract_dir": "core",
    "bin": [
        [
            "firefox.exe",
            "firefox-beta",
            "-Profile \"$dir\\Profile\""
        ]
    ],
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox Beta",
            "-Profile Profile"
        ]
    ],
    "persist": "Profile",
    "checkver": {
        "url": "https://www.mozilla.org/de/firefox/all/",
        "regex": "<option value=\"desktop_beta\">([\\db.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            }
        }
    }
}
