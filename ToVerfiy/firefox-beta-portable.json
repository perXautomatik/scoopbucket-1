{
    "description": "Beta builds of Firefox: the popular open source web browser.",
    "homepage": "https://www.mozilla.org/en-US/firefox/beta/",
    "version": "78.0b1",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/78.0b1/win64/en-US/Firefox%20Setup%2078.0b1.exe#/dl.7z",
            "hash": "sha512:5389001ce6a9fc44513d42711505a30d73ad305bcaf7704a80a1f01620030021f1721a22c9228a45179037aa37e89e23cd91275d6dc08b837a123dc61718fc89"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/78.0b1/win32/en-US/Firefox%20Setup%2078.0b1.exe#/dl.7z",
            "hash": "sha512:cecb827992f8dcebe6f2093e8ea9999c8ea8bbd0f610185d48cac1d3bddaefc445d92bafbf72eaa499280bdbd0d824803766e1b23e4208af195badf71425b667"
        }
    },
    "extract_dir": "core",
    "bin": [
        [
            "firefox.exe",
            "firefox-beta",
            "-Profile \"$dir\\Profile\""
        ]
    ],
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox Beta",
            "-Profile Profile"
        ]
    ],
    "checkver": {
        "url": "https://www.mozilla.org/de/firefox/all/",
        "regex": "<option value=\"desktop_beta\">([\\db.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            }
        }
    }
}
