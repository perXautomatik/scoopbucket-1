    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/80.0b7/win64/en-US/Firefox%20Setup%2080.0b7.exe#/dl.7z",
            "hash": "sha512:c2897e8ca79441f9a3f4ba76fa7ada66b9c7c519162db3d113a9925aa17d62b475be0b91a341d97a8a7fe28e87fba57dd41c3c3b81bfca55652bad5c04d4929d"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/80.0b7/win32/en-US/Firefox%20Setup%2080.0b7.exe#/dl.7z",
            "hash": "sha512:0e91fd63fd5e295690f4144b40a8d852c1b71e065dc1bc516e02685f022f680c8092b30e4b7dd664aff0f43982831407724ccb98e7b1701dcb869ef9cd035da1"
        }
    },
    "extract_dir": "core",
    "bin": [
        [
            "firefox.exe",
            "firefox-beta",
            "-Profile \"$dir\\Profile\""
        ]
    ],
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox Beta",
            "-Profile Profile"
        ]
    ],
    "checkver": {
        "url": "https://www.mozilla.org/de/firefox/all/",
        "regex": "<option value=\"desktop_beta\">([\\db.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            }
        }
    }
}
