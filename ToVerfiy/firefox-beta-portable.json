{
    "description": "Beta builds of Firefox: the popular open source web browser.",
    "homepage": "https://www.mozilla.org/en-US/firefox/beta/",
    "version": "82.0b1",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/82.0b1/win64/en-US/Firefox%20Setup%2082.0b1.exe#/dl.7z",
            "hash": "sha512:eb3fb6717bd3a94e4bb3bf339dfe79cd01b58666e507928b3b935a757424381a94ed2e4361d693430dc428408f362e4143f20c2a26128fde8b7b50a2c3c034d8"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/82.0b1/win32/en-US/Firefox%20Setup%2082.0b1.exe#/dl.7z",
            "hash": "sha512:5ea11cfdacdb346cb28618b3b6f4bb10768fa888f6fa2d939888c0d56cdb1e6f9160894b40a5bf1cbab8b534d54fe9767d84e784838089a3e9e507d72e15f40f"
        }
    },
    "extract_dir": "core",
    "bin": [
        [
            "firefox.exe",
            "firefox-beta",
            "-Profile \"$dir\\Profile\""
        ]
    ],
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox Beta",
            "-Profile Profile"
        ]
    ],
    "checkver": {
        "url": "https://www.mozilla.org/de/firefox/all/",
        "regex": "<option value=\"desktop_beta\">([\\db.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            }
        }
    }
}
