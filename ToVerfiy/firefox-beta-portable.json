{
    "description": "Beta builds of Firefox: the popular open source web browser.",
    "homepage": "https://www.mozilla.org/en-US/firefox/beta/",
    "version": "89.0b8",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/89.0b8/win64/en-US/Firefox%20Setup%2089.0b8.exe#/dl.7z",
            "hash": "sha512:fde6cf48b47fc45664c92412ddd987fecf0bd69b94db995f1e950bab3214ea6715cfb941b13054a6cd4beb6a54f8e0c30da979365acfd9cefd399eb7ac7b9212"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/89.0b8/win32/en-US/Firefox%20Setup%2089.0b8.exe#/dl.7z",
            "hash": "sha512:ea83d76b144bbe6774d98e598e4b84a4f8c46c68e0dcfbd7c8e9f96ff4159990001e02274f1bfec0ee28f9248dd7304c25fc2e3c8d28541bd3b81fd6aa3ef6de"
        }
    },
    "extract_dir": "core",
    "bin": [
        [
            "firefox.exe",
            "firefox-beta",
            "-Profile \"$dir\\Profile\""
        ]
    ],
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox Beta",
            "-Profile Profile"
        ]
    ],
    "persist": "Profile",
    "checkver": {
        "url": "https://www.mozilla.org/de/firefox/all/",
        "regex": "<option value=\"desktop_beta\">([\\db.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            }
        }
    }
}
