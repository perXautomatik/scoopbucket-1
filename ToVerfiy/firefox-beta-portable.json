{
    "description": "Beta builds of Firefox: the popular open source web browser.",
    "homepage": "https://www.mozilla.org/en-US/firefox/beta/",
    "version": "85.0b7",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/85.0b7/win64/en-US/Firefox%20Setup%2085.0b7.exe#/dl.7z",
            "hash": "sha512:fc5c0dcd8af08de8b62edc53f1668c112a1495a0c9a86bb1c9249d83a8f28ea429ba659b59389bce0103eb1822196c7809212e192e4f8483005f1d17fe2558a7"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/85.0b7/win32/en-US/Firefox%20Setup%2085.0b7.exe#/dl.7z",
            "hash": "sha512:6dff02fbf6211cf95adf9999ff0bdefebb47fed77a3127c175bd106e85fb413542fa3a023e6a5964d0a897dc690295d4f9e51708313d38fe8e8d43b7a2228b60"
        }
    },
    "extract_dir": "core",
    "bin": [
        [
            "firefox.exe",
            "firefox-beta",
            "-Profile \"$dir\\Profile\""
        ]
    ],
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox Beta",
            "-Profile Profile"
        ]
    ],
    "persist": "Profile",
    "checkver": {
        "url": "https://www.mozilla.org/de/firefox/all/",
        "regex": "<option value=\"desktop_beta\">([\\db.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            }
        }
    }
}
