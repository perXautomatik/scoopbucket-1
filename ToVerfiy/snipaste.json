{
    "homepage": "https://www.snipaste.com/",
    "description": "A snipping tool, which allows you to pin the screenshot back onto the screen.",
    "version": "2.5-Beta",
    "license": "Proprietary",
    "architecture": {
        "64bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.5-Beta-x64.zip",
            "hash": "sha1:a5808594aee970e81979cbde0a2b97a9b061e2ec"
        },
        "32bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.5-Beta-x86.zip",
            "hash": "sha1:df44e333a76d857598abc538256fe1686f68de1f"
        }
    },
    "pre_install": "if (!(Test-Path \"$persist_dir\\config.ini\")) { Set-Content \"$dir\\config.ini\" '' -Encoding ASCII }",
    "persist": [
        "history",
        "config.ini"
    ],
    "bin": "Snipaste.exe",
    "shortcuts": [
        [
            "Snipaste.exe",
            "Snipaste"
        ]
    ],
    "suggest": {
        "vcredist": "extras/vcredist2015"
    },
    "checkver": {
        "url": "https://bitbucket.org/liule/snipaste/downloads/",
        "regex": "Snipaste-(([\\d.]+)-Beta[\\d]*?)-x64.zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-$version-x64.zip"
            },
            "32bit": {
                "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-$version-x86.zip"
            }
        },
        "hash": {
            "url": "https://dl.snipaste.com/sha-1.txt"
        }
    }
}
